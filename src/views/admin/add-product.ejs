<%- include('../includes/header.ejs') %>

<form class="needs-validation" action="/admin/add-product" method="POST">
    <div class="form-group">
        <label for="nameInput">Name</label>
        <input class="form-control" id="nameInput" type="text" name="name" aria-describedby="nameHelp" placeholder="Product Name" required />
        <small id="nameHelp" class="form-text text-muted">Product names do not have to be unique.</small>
    </div>
    <div class="form-group">
        <label for="descInput">Description</label>
        <textarea class="form-control" style="resize: none" id="descInput" name="description" placeholder="Product Description" required></textarea>
    </div>
    <div class="form-group">
        <label for="priceInput">Price (Â£)</label>
        <input class="form-control" id="priceInput" type="number" name="price" value="1.00" step="0.01" required/>
    </div>
    <div class="form-group">
        <label for="imageUriInput">Image Uri</label>
        <input class="form-control" id="imageUriInput" type="text" name="imageUri" placeholder="http://" />
    </div>
    <button type="submit" class="btn btn-warning">Add</button>
</form>
        
