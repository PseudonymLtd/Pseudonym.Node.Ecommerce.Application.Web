<%- include('../includes/header.ejs') %>

<form class="needs-validation" action="/admin/update-product/<%= product.id %>?sender=<%= sender %>" method="POST">
    <div class="form-group">
        <label for="nameInput">Name</label>
        <input class="form-control" id="nameInput" type="text" name="name" aria-describedby="nameHelp" placeholder="Product Name" value="<%= product.name %>" required />
        <small id="nameHelp" class="form-text text-muted">Product names do not have to be unique.</small>
    </div>
    <div class="form-group">
        <label for="descInput">Description</label>
        <textarea class="form-control" id="descInput" name="description" placeholder="Product Description" required><%= product.description %></textarea>
    </div>
    <div class="form-group">
        <label for="priceInput">Price (Â£)</label>
        <input class="form-control" id="priceInput" type="number" name="price" step="0.01" value="<%= product.price %>" required/>
    </div>
        <div class="form-group">
        <label for="imageUriInput">Image Uri</label>
        <input class="form-control" id="imageUriInput" type="text" name="imageUri" placeholder="http://" value="<%= product.imageUri %>"/>
    </div>
    <input type="hidden" id="id" name="id" value="<%= product.id %>">
    <button type="submit" class="btn btn-warning">Update</button>
</form>
        
<%- include('../includes/footer.ejs') %>