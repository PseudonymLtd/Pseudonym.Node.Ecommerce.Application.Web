<%- include('includes/header.ejs') %>

<div class="jumbotron">
    <h1 class="display-4">Welcome to the shop</h1>
    <p class="lead">Please feel free to browse products here</p>
    <hr class="my-4">
    <p>To find out more about us, click below.</p>
    <a class="btn btn-warning btn-lg" href="#" role="button">Learn more</a>
</div>
<div>
    <% if (products.length > 0) { %>
        <div class="d-flex" style="padding: 0 0 100px 0; margin-left: -10px; flex-wrap: wrap;">
            <% for (let product of products) { %>
                <div class="card" style="max-width: 224px; min-width: 224px; margin: 10px">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ4kBXV6VqdDEmldnFeTtLXnOrcF2A0oF_4THg5kyQt4D8Wgvmj" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Â£<%= product.price.toFixed(2) %></h6>
                        <p class="card-text"><%= product.description %></p>
                        <a href="/shop/product/<%= product.id %>" class="btn btn-warning">View</a>
                    </div>
                </div>
            <% } %>
        </div>
    <% } else { %>
        <h2>No Products available.</h2>
    <% } %>
</div>

<%- include('includes/footer.ejs') %>